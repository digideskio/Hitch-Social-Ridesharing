<div class="navigation">

  <button class="nav-btns" id="back-button-nav">
    <img src="/images/back-icon.png" alt="">
  </button>

  <form action="/login" method="post">
    <input type="hidden" name="_method" value="delete">
    <button class="nav-btns" id="logout_button">
      <img src="/images/icons/logout.png" alt="">
    </button>
  </form>

</div>

<div class="page_holder">

  <h3>Profile</h3>
  <h1><%= @user_profile['first_name'] %> <%= @user_profile['last_name'] %></h1>

  <div class="item_holder" id="profile_general">
    <p>General</p>
    <a href="/profile/edit">
      <img src="/images/icons/settings.png" alt="" class="edit_button">
    </a>
    <div class="item_panel">
      <p><span class="label">Email: </span><%= @user_profile['email'] %></p>
      <p><span class="label">Location: </span><%= @user_profile['location'] %></p>
      <p><span class="label">Drivers License: </span><%= @user_profile['drivers_license'] %></p>
    </div>
  </div>

  <div class="item_holder" id="profile_driver">
    <p>Driver</p>
    <a href="/profile/edit">
      <img src="/images/icons/settings.png" alt="" class="edit_button">
    </a>
    <div class="item_panel">
      <div class="driver_circles">
        <p><span class="label">Rating: </span><br><%= @user_profile['review_outof_five'] %></p>
      </div>
      <div class="driver_circles" id="blue_circle">
        <p><span class="label">Car Plate: </span><%= @user_profile['car_plate'] %></p>
      </div>
      <div class="driver_circles" id="orange_circle">
        <p><span class="label">Location: </span><%= @user_profile['location'] %></p>
      </div>
      <div class="driver_info_left">
        <h3>Car Details</h3>
        <p><span class="label">Brand: </span><%= @user_profile['car_brand'] %></p>
        <p><span class="label">Model: </span><%= @user_profile['car_model'] %></p>
        <p><span class="label">Year: </span><%= @user_profile['car_year'] %></p>
        <p><span class="label">Color: </span><%= @user_profile['car_colour'] %></p>
      </div>
    </div>
    <div class="driver_info_right">
      <img src="/images/icons/driver_car_icon.png" alt="">
    </div>
  </div>
</div>

<script src="/javascripts/nav-buttons.js"></script>
